<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Demo Assignment Rule: High-value Enterprise Technology -->
        <record id="assignment_rule_tech_enterprise" model="gotit.assignment.rule">
            <field name="name">Technology Enterprise - High Value</field>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
            <field name="industry_group">technology</field>
            <field name="customer_type">enterprise</field>
            <field name="order_value_range">500m+</field>
            <field name="assigned_user_id" ref="base.user_admin"/>
        </record>

        <!-- Demo Assignment Rule: North Region SME -->
        <record id="assignment_rule_north_sme" model="gotit.assignment.rule">
            <field name="name">North Vietnam - SME</field>
            <field name="sequence">20</field>
            <field name="active" eval="True"/>
            <field name="region">north</field>
            <field name="customer_type">sme</field>
            <field name="assigned_user_id" ref="base.user_admin"/>
        </record>

        <!-- Demo Assignment Rule: Default catch-all -->
        <record id="assignment_rule_default" model="gotit.assignment.rule">
            <field name="name">Default Assignment</field>
            <field name="sequence">100</field>
            <field name="active" eval="True"/>
            <field name="assigned_user_id" ref="base.user_admin"/>
        </record>

    </data>
</odoo>
