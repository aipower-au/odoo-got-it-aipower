<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Lead Form View Extension -->
    <record id="view_crm_lead_form_gotit" model="ir.ui.view">
        <field name="name">crm.lead.form.gotit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <!-- Add lead caretaker field -->
            <field name="user_id" position="after">
                <field name="lead_caretaker_id"
                       invisible="partner_id and partner_id.user_id"/>
            </field>

            <!-- Add assignment history in internal notes -->
            <xpath expr="//page[@name='internal_notes']" position="inside">
                <group string="Assignment History" name="assignment_history">
                    <field name="assignment_history" nolabel="1"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
