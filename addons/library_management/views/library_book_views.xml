<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_library_book_list" model="ir.ui.view">
            <field name="name">library.book.list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <list string="Books">
                    <field name="name" string="Title"/>
                    <field name="author"/>
                    <field name="isbn"/>
                    <field name="category"/>
                    <field name="total_copies"/>
                    <field name="available_copies"/>
                    <field name="borrowed_copies"/>
                    <field name="state"
                           decoration-success="state == 'available'"
                           decoration-warning="state == 'borrowed'"
                           decoration-danger="state == 'unavailable'"
                           widget="badge"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_library_book_form" model="ir.ui.view">
            <field name="name">library.book.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="available,borrowed"/>
                    </header>
                    <sheet>
                        <field name="cover_image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Book Title" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="author"/>
                                <field name="isbn"/>
                                <field name="publisher"/>
                                <field name="publication_date"/>
                            </group>
                            <group>
                                <field name="category"/>
                                <field name="pages"/>
                                <field name="total_copies"/>
                                <field name="available_copies"/>
                                <field name="borrowed_copies"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Book description or summary..."/>
                            </page>
                            <page string="Borrowing History">
                                <field name="borrowing_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="member_id"/>
                                        <field name="borrow_date"/>
                                        <field name="due_date"/>
                                        <field name="return_date"/>
                                        <field name="state" widget="badge"/>
                                        <field name="is_overdue" invisible="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_library_book_search" model="ir.ui.view">
            <field name="name">library.book.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="isbn"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_library_book_kanban" model="ir.ui.view">
            <field name="name">library.book.kanban</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="cover_image"/>
                    <field name="state"/>
                    <field name="available_copies"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('library.book', 'cover_image', record.id.raw_value)"
                                         alt="Book Cover" class="o_image_64_cover"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="author"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="state" widget="label"
                                                   decoration-success="state == 'available'"
                                                   decoration-warning="state == 'borrowed'"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span><field name="available_copies"/> available</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first book!
                </p>
                <p>
                    Add books to your library catalog to start managing your collection.
                </p>
            </field>
        </record>

    </data>
</odoo>
