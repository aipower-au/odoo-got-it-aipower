<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========== LIST VIEW ========== -->
        <record id="estate_property_offer_view_tree" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Property Offers" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                    <field name="price" widget="monetary"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="property_type_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <!-- ========== FORM VIEW ========== -->
        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Offer">
                    <header>
                        <button name="action_accept" type="object" string="Accept" class="btn-primary" invisible="status"/>
                        <button name="action_refuse" type="object" string="Refuse" invisible="status"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="price" widget="monetary"/>
                                <field name="partner_id"/>
                                <field name="property_id"/>
                            </group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== ACTIONS ========== -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
