<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Audit Log Tree View -->
    <record id="view_crm_lead_audit_log_tree" model="ir.ui.view">
        <field name="name">crm.lead.audit.log.tree</field>
        <field name="model">crm.lead.audit.log</field>
        <field name="arch" type="xml">
            <tree string="Audit Logs" create="false" edit="false" delete="false">
                <field name="timestamp"/>
                <field name="lead_id"/>
                <field name="operation_type"/>
                <field name="operation_result"/>
                <field name="processing_time_ms" string="Time (ms)"/>
                <field name="customer_id"/>
                <field name="created_by"/>
            </tree>
        </field>
    </record>

    <!-- Audit Log Form View -->
    <record id="view_crm_lead_audit_log_form" model="ir.ui.view">
        <field name="name">crm.lead.audit.log.form</field>
        <field name="model">crm.lead.audit.log</field>
        <field name="arch" type="xml">
            <form string="Audit Log" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="timestamp"/>
                            <field name="operation_type"/>
                            <field name="operation_result"/>
                            <field name="processing_time_ms"/>
                        </group>
                        <group>
                            <field name="lead_id"/>
                            <field name="customer_id"/>
                            <field name="created_by"/>
                        </group>
                    </group>
                    <group string="Details">
                        <field name="details" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Audit Log Search View -->
    <record id="view_crm_lead_audit_log_search" model="ir.ui.view">
        <field name="name">crm.lead.audit.log.search</field>
        <field name="model">crm.lead.audit.log</field>
        <field name="arch" type="xml">
            <search string="Audit Logs">
                <field name="lead_id"/>
                <field name="customer_id"/>
                <field name="operation_type"/>
                <field name="operation_result"/>
                <filter string="Validation" name="validation"
                        domain="[('operation_type', '=', 'validation')]"/>
                <filter string="Duplicate Detection" name="duplicate_detection"
                        domain="[('operation_type', '=', 'duplicate_detection')]"/>
                <filter string="Assignment" name="assignment"
                        domain="[('operation_type', '=', 'assignment')]"/>
                <filter string="Verification" name="verification"
                        domain="[('operation_type', '=', 'verification')]"/>
                <separator/>
                <filter string="Last 7 Days" name="last_7_days"
                        domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="last_30_days"
                        domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group string="Group By">
                    <filter string="Operation Type" name="group_operation_type"
                            context="{'group_by': 'operation_type'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'timestamp:day'}"/>
                    <filter string="Lead" name="group_lead"
                            context="{'group_by': 'lead_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Audit Log Action -->
    <record id="action_crm_lead_audit_log" model="ir.actions.act_window">
        <field name="name">Audit Logs</field>
        <field name="res_model">crm.lead.audit.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_last_7_days': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No audit logs yet
            </p>
            <p>
                Audit logs will appear here as leads are processed through the automation system.
            </p>
        </field>
    </record>
</odoo>
