<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_library_borrowing_tree" model="ir.ui.view">
            <field name="name">library.borrowing.tree</field>
            <field name="model">library.borrowing</field>
            <field name="arch" type="xml">
                <tree string="Borrowings"
                      decoration-danger="is_overdue and state == 'borrowed'"
                      decoration-muted="state in ('cancelled', 'returned')">
                    <field name="name"/>
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <field name="borrow_date"/>
                    <field name="due_date"/>
                    <field name="return_date"/>
                    <field name="duration"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="days_overdue" invisible="state != 'borrowed'"/>
                    <field name="fine_amount" sum="Total Fines"/>
                    <field name="state"
                           decoration-success="state == 'returned'"
                           decoration-warning="state == 'borrowed'"
                           decoration-info="state == 'draft'"
                           decoration-muted="state == 'cancelled'"
                           widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_library_borrowing_form" model="ir.ui.view">
            <field name="name">library.borrowing.form</field>
            <field name="model">library.borrowing</field>
            <field name="arch" type="xml">
                <form string="Borrowing">
                    <header>
                        <button name="action_borrow"
                                string="Confirm Borrowing"
                                type="object"
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_return"
                                string="Return Book"
                                type="object"
                                class="btn-success"
                                invisible="state != 'borrowed'"/>
                        <button name="action_pay_fine"
                                string="Pay Fine"
                                type="object"
                                class="btn-warning"
                                invisible="fine_amount &lt;= 0 or fine_paid or state != 'returned'"/>
                        <button name="action_cancel"
                                string="Cancel"
                                type="object"
                                invisible="state not in ('draft', 'borrowed')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,borrowed,returned"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="alert alert-danger" role="alert" invisible="not is_overdue or state != 'borrowed'">
                            <strong>Overdue!</strong> This book is <field name="days_overdue"/> days overdue.
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="book_id" options="{'no_create': True}"/>
                                <field name="member_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="borrow_date"/>
                                <field name="due_date"/>
                                <field name="return_date" readonly="state != 'returned'"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <group invisible="fine_amount &lt;= 0">
                            <group>
                                <field name="is_overdue" invisible="1"/>
                                <field name="fine_amount" widget="monetary"/>
                                <field name="fine_paid" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Additional notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_library_borrowing_search" model="ir.ui.view">
            <field name="name">library.borrowing.search</field>
            <field name="model">library.borrowing</field>
            <field name="arch" type="xml">
                <search string="Search Borrowings">
                    <field name="name"/>
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                    <filter string="Returned" name="returned" domain="[('state', '=', 'returned')]"/>
                    <separator/>
                    <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <filter string="With Fines" name="with_fines" domain="[('fine_amount', '>', 0)]"/>
                    <filter string="Unpaid Fines" name="unpaid_fines" domain="[('fine_amount', '>', 0), ('fine_paid', '=', False)]"/>
                    <separator/>
                    <filter string="Borrow Date" name="borrow_date" date="borrow_date"/>
                    <filter string="Due Date" name="due_date" date="due_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Book" name="book" context="{'group_by': 'book_id'}"/>
                        <filter string="Member" name="member" context="{'group_by': 'member_id'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Borrow Date" name="group_borrow_date" context="{'group_by': 'borrow_date'}"/>
                        <filter string="Due Date" name="group_due_date" context="{'group_by': 'due_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_library_borrowing_kanban" model="ir.ui.view">
            <field name="name">library.borrowing.kanban</field>
            <field name="model">library.borrowing</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="book_id"/>
                    <field name="member_id"/>
                    <field name="borrow_date"/>
                    <field name="due_date"/>
                    <field name="is_overdue"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" t-att-class="record.is_overdue.raw_value and record.state.raw_value == 'borrowed' ? 'border-danger' : ''">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="book_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="member_id"/>
                                    </div>
                                    <div>
                                        <span>Borrowed: <field name="borrow_date"/></span>
                                    </div>
                                    <div>
                                        <span>Due: <field name="due_date"/></span>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="name"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-if="record.is_overdue.raw_value and record.state.raw_value == 'borrowed'"
                                                  class="badge badge-danger">Overdue</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_library_borrowing" model="ir.actions.act_window">
            <field name="name">Borrowings</field>
            <field name="res_model">library.borrowing</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_borrowed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first borrowing record!
                </p>
                <p>
                    Track book borrowings and returns from library members.
                </p>
            </field>
        </record>

    </data>
</odoo>
