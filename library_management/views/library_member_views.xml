<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_library_member_tree" model="ir.ui.view">
            <field name="name">library.member.tree</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <tree string="Members">
                    <field name="member_id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="membership_type"/>
                    <field name="membership_date"/>
                    <field name="expiry_date"/>
                    <field name="borrowed_books_count"/>
                    <field name="overdue_count"/>
                    <field name="state"
                           decoration-success="state == 'active'"
                           decoration-warning="state == 'expired'"
                           decoration-danger="state == 'suspended'"
                           widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_library_member_form" model="ir.ui.view">
            <field name="name">library.member.form</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <form string="Member">
                    <header>
                        <button name="action_renew_membership"
                                string="Renew Membership"
                                type="object"
                                class="btn-primary"
                                invisible="state != 'expired'"/>
                        <field name="state" widget="statusbar" statusbar_visible="active,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_borrowings"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-book">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="borrowed_books_count" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">Borrowed</span>
                                </div>
                            </button>
                            <button name="action_view_borrowings"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-history">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="total_borrowed_count" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">Total</span>
                                </div>
                            </button>
                            <button name="action_view_borrowings"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-exclamation-triangle"
                                    invisible="overdue_count == 0">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value text-danger">
                                        <field name="overdue_count" widget="statinfo"/>
                                    </span>
                                    <span class="o_stat_text">Overdue</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Member Name" required="1"/>
                            </h1>
                            <h3>
                                <field name="member_id" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Contact Information">
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                            <group string="Membership">
                                <field name="membership_type"/>
                                <field name="membership_date"/>
                                <field name="expiry_date"/>
                            </group>
                        </group>
                        <group string="Address">
                            <group>
                                <field name="street" placeholder="Street..."/>
                                <field name="street2" placeholder="Street 2..."/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="state_id"/>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Borrowing History">
                                <field name="borrowing_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="book_id"/>
                                        <field name="borrow_date"/>
                                        <field name="due_date"/>
                                        <field name="return_date"/>
                                        <field name="is_overdue" invisible="1"/>
                                        <field name="state" widget="badge"
                                               decoration-danger="is_overdue"/>
                                        <field name="fine_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="Internal notes about this member..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_library_member_search" model="ir.ui.view">
            <field name="name">library.member.search</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <search string="Search Members">
                    <field name="name" string="Name or ID"
                           filter_domain="['|', ('name', 'ilike', self), ('member_id', 'ilike', self)]"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <filter string="Active Members" name="active_members" domain="[('state', '=', 'active')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                    <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                    <separator/>
                    <filter string="Has Overdue Books" name="has_overdue" domain="[('overdue_count', '>', 0)]"/>
                    <filter string="Currently Borrowing" name="borrowing" domain="[('borrowed_books_count', '>', 0)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Membership Type" name="membership_type" context="{'group_by': 'membership_type'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_library_member_kanban" model="ir.ui.view">
            <field name="name">library.member.kanban</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="member_id"/>
                    <field name="email"/>
                    <field name="state"/>
                    <field name="borrowed_books_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="member_id"/>
                                    </div>
                                    <div>
                                        <field name="email"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="state" widget="label"
                                                   decoration-success="state == 'active'"
                                                   decoration-warning="state == 'expired'"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span><field name="borrowed_books_count"/> borrowed</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_library_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_active_members': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Register your first library member!
                </p>
                <p>
                    Add members to allow them to borrow books from your library.
                </p>
            </field>
        </record>

    </data>
</odoo>
