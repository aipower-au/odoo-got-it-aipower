<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Demo Books -->
        <record id="book_1984" model="library.book">
            <field name="name">1984</field>
            <field name="author">George Orwell</field>
            <field name="isbn">978-0451524935</field>
            <field name="publisher">Signet Classic</field>
            <field name="publication_date">1950-06-01</field>
            <field name="category">fiction</field>
            <field name="pages">328</field>
            <field name="total_copies">5</field>
            <field name="description">A dystopian social science fiction novel and cautionary tale.</field>
        </record>

        <record id="book_to_kill_mockingbird" model="library.book">
            <field name="name">To Kill a Mockingbird</field>
            <field name="author">Harper Lee</field>
            <field name="isbn">978-0061120084</field>
            <field name="publisher">Harper Perennial Modern Classics</field>
            <field name="publication_date">1960-07-11</field>
            <field name="category">fiction</field>
            <field name="pages">324</field>
            <field name="total_copies">3</field>
            <field name="description">A gripping, heart-wrenching, and wholly remarkable tale of coming-of-age in a South poisoned by virulent prejudice.</field>
        </record>

        <record id="book_sapiens" model="library.book">
            <field name="name">Sapiens: A Brief History of Humankind</field>
            <field name="author">Yuval Noah Harari</field>
            <field name="isbn">978-0062316097</field>
            <field name="publisher">Harper</field>
            <field name="publication_date">2015-02-10</field>
            <field name="category">history</field>
            <field name="pages">464</field>
            <field name="total_copies">4</field>
            <field name="description">From a renowned historian comes a groundbreaking narrative of humanity's creation and evolution.</field>
        </record>

        <record id="book_clean_code" model="library.book">
            <field name="name">Clean Code: A Handbook of Agile Software Craftsmanship</field>
            <field name="author">Robert C. Martin</field>
            <field name="isbn">978-0132350884</field>
            <field name="publisher">Prentice Hall</field>
            <field name="publication_date">2008-08-01</field>
            <field name="category">technology</field>
            <field name="pages">464</field>
            <field name="total_copies">2</field>
            <field name="description">Even bad code can function. But if code isn't clean, it can bring a development organization to its knees.</field>
        </record>

        <record id="book_brief_history_time" model="library.book">
            <field name="name">A Brief History of Time</field>
            <field name="author">Stephen Hawking</field>
            <field name="isbn">978-0553380163</field>
            <field name="publisher">Bantam</field>
            <field name="publication_date">1988-03-01</field>
            <field name="category">science</field>
            <field name="pages">256</field>
            <field name="total_copies">3</field>
            <field name="description">A landmark volume in science writing by one of the great minds of our time.</field>
        </record>

        <record id="book_harry_potter" model="library.book">
            <field name="name">Harry Potter and the Philosopher's Stone</field>
            <field name="author">J.K. Rowling</field>
            <field name="isbn">978-0439708180</field>
            <field name="publisher">Scholastic</field>
            <field name="publication_date">1998-09-01</field>
            <field name="category">children</field>
            <field name="pages">309</field>
            <field name="total_copies">6</field>
            <field name="description">The first novel in the Harry Potter series and Rowling's debut novel.</field>
        </record>

